<% provide :title, t(".sign_in") %>
<section id="counter" class="parallax-section">
  <div class="container">
    <div class="row vertical-offset-200">
      <div class="col-md-3"></div>
      <div class="col-md-6 col-sm-12 animation-fadeIn">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title title-color">
              <%= t ".remind" %>
            </h3>
          </div>
          <div class="panel-body">
            <%= form_for resource, as: resource_name,
              url: session_path(resource_name) do |f| %>
              <%= devise_error_messages! %>
              <fieldset>
                <div class="form-group padding-bot-10">
                  <%= f.email_field :email, autofocus: true, class: "form-control",
                    placeholder: t(".email") %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "off",
                    class: "form-control",
                    placeholder: t(".password") %>
                </div>
                <div class="checkbox">
                  <label class="switch switch-success" data-toggle="tooltip"
                    title="<%= t ".remember_me" %>">
                    <% if devise_mapping.rememberable? -%>
                        <%= f.check_box :remember_me %>
                        <span></span>
                    <% end %>
                  </label>
                </div>
                <%= f.submit t(".sign_in"),
                  class: "btn btn-lg btn-success btn-block" %>
              </fieldset>
            <% end %>
          </div>
          <div class="panel-body">
            <%= link_to t(".forgot_password"),
              new_password_path(resource_name), data: {turbolinks: false} %> -
            <%= link_to t(".create_new_account"),
              new_registration_path(resource_name), data: {turbolinks: false} %>
          </div>
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</section>
