<% provide :title, t(".reset_password") %>
<section id="counter" class="parallax-section">
  <div class="container">
    <div class="row vertical-offset-200">
      <div class="col-md-3"></div>
      <div class="col-md-6 col-sm-12 animation-fadeIn">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title title-color">
              <%= t ".forgot_pass" %>
            </h3>
          </div>
          <div class="panel-body">
            <%= form_for resource, as: resource_name,
              url: password_path(resource_name), html: {method: :put} do |f| %>
              <%= devise_error_messages! %>
              <%= f.hidden_field :reset_password_token %>
              <fieldset>
                <div class="form-group padding-bot-10">
                  <%= f.password_field :password, autofocus: true,
                    autocomplete: "off", class: "form-control",
                    placeholder: t(".new") %>
                </div>
                <div class="form-group padding-bot-10">
                  <%= f.password_field :password_confirmation, autofocus: true,
                    autocomplete: "off", class: "form-control",
                    placeholder: t(".confirm") %>
                </div>
                <%= f.submit t(".submit"),
                  class: "btn btn-lg btn-success btn-block" %>
              </fieldset>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</section>
