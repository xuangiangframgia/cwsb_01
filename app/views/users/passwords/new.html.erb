<% provide :title, t(".forgot_pass") %>
<section id="counter" class="parallax-section">
  <div class="container">
    <div class="row vertical-offset-200">
      <div class="col-md-3"></div>
      <div class="col-md-6 col-sm-12 animation-fadeIn">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title title-color">
              <%= t ".forgot_pass" %>
            </h3>
          </div>
          <div class="panel-body">
            <%= form_for resource, as: resource_name,
              url: password_path(resource_name), html: {method: :post} do |f| %>
              <%= devise_error_messages! %>
              <fieldset>
                <div class="form-group padding-bot-10">
                  <%= f.email_field :email, autofocus: true, class: "form-control",
                    placeholder: t(".email") %>
                </div>
                <%= f.submit t(".reset_password"),
                  class: "btn btn-lg btn-success btn-block" %>
              </fieldset>
            <% end %>
          </div>
          <div class="panel-body">
            <small><%= t ".remind" %></small>
            <%= link_to t(".login"),
              new_session_path(resource_name), data: {turbolinks: false} %>
          </div>
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</section>
